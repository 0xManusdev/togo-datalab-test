{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@config/*": ["src/config/*"],
			"@controllers/*": ["src/controllers/*"],
			"@dto/*": ["src/dto/*"],
			"@middleware/*": ["src/middleware/*"],
			"@routes/*": ["src/routes/*"],
			"@services/*": ["src/services/*"],
			"@types/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"],
			"@errors/*": ["src/errors/*"],
			"@generated/*": ["src/generated/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
